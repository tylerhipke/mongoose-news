<header>
    <img src="./assets/header.jpeg" id="header-img">
</header>
<div class="flex-container">
    <div class="news-body">
        <div class="mb-5 mx-5" id="page-lead">
            <h1 class="display-1">san diego: news now</h1>
            <p class="lead">save your articles for later, free of use</p>
        </div>

        <div class="card-columns w-75 mx-auto">
            {{#if articles}}
            {{#each articles}}
            <div class="card" id="{{this.id}}">
                <img src="{{this.image}}" alt="{{this.title}}" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.summary}}</p>
                    <a href="{{this.link}}" target="_blank" class="btn btn-light">View</a>
                    <button data="{{this.id}}" class="btn btn-light btn-save">Save</button>
                </div>
            </div>
            {{/each}}
        </div>

        {{else}}
        <h1 class="display-1 text-center mt-5">Please Pull More Articles</h1>
        {{/if}}
    </div>

    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Holy guacamole!</strong> You should check in on some of those fields below.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

</div>

<script>
    document.getElementById('home-nav-link').classList.add('active');
</script>