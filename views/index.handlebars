<div class="container">
    <div class="news-body">
        {{#if articles}}
        {{#each articles}}
        <div class="card" style="width: 100%">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.summary}}</p>
                <a href="{{this.link}}" id="{{this.id}}" class="btn btn-info">Save For Later</a>
            </div>
        </div>
        {{/each}}
        {{else}}
        <h1 class="display-1 text-center mt-5">Please Pull More Articles</h1>
        {{/if}}
    </div>
</div>